{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "name": "@oliversalzburg/action-label-manager",
  "version": "0.0.12",
  "license": "MIT",
  "author": "Oliver Salzburg <oliver.salzburg@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:export": "yarn run rebuild && cp output/main.js lib/main.js",
    "clean": "rm -rf ./output",
    "lint": "yarn run lint:all",
    "lint:all": "yarn run lint:eslint && yarn run lint:prettier && yarn run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "rebuild": "yarn run clean && yarn run build",
    "test": "tsc && node $(yarn bin mocha) output/*.test.js",
    "test:coverage": "tsc && c8 --reporter=html-spa node $(yarn bin mocha) output/*.test.js",
    "preversion": "yarn run lint && yarn run test",
    "version": "yarn run build:export && git add --all lib",
    "postversion": "git push"
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "5.1.1",
    "@oliversalzburg/js-utils": "0.0.30",
    "tslib": "2.6.2",
    "yaml": "2.4.2"
  },
  "devDependencies": {
    "@eslint/js": "9.3.0",
    "@kie/mock-github": "2.0.1",
    "@types/chai": "4.3.16",
    "@types/eslint": "8.56.10",
    "@types/mocha": "10.0.6",
    "@types/node": "20.12.12",
    "c8": "9.1.0",
    "chai": "5.1.1",
    "esbuild": "0.21.3",
    "eslint": "8.57.0",
    "globals": "15.3.0",
    "lint-staged": "15.2.4",
    "mocha": "10.4.0",
    "prettier": "3.2.5",
    "prettier-package-json": "2.8.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "typescript": "5.4.5",
    "typescript-eslint": "7.10.0"
  },
  "packageManager": "yarn@4.2.2"
}
